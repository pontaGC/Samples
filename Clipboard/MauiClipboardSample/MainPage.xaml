<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiClipboardSample"
             x:Class="MauiClipboardSample.MainPage"
             x:ClassModifier="internal"
             x:DataType="local:MainPageViewModel">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="■ Input Text" FontAttributes="Bold" />
        <Editor 
            x:Name="InputEditor"
            Text="{Binding InputText}"
            Placeholder="Enter text to copy here..."
            HeightRequest="100"
            Keyboard="Text"
            BackgroundColor="#f0f0f0"
            Margin="0, -5, 0, 10" />

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

            <Button 
                Text="Copy (SetText)"
                Command="{Binding CopyTextCommand, Mode=OneTime}"
                BackgroundColor="#2196F3"
                TextColor="White" />

            <Button 
                Text="Paste (GetText)"
                Command="{Binding PasteTextCommand, Mode=OneTime}"
                BackgroundColor="#4CAF50"
                TextColor="White" />

            <Button 
                Text="Check Text (HasText)"
                Command="{Binding HasTextCommand, Mode=OneTime}"
                BackgroundColor="#FF9800"
                TextColor="White" />
        </HorizontalStackLayout>

        <BoxView HeightRequest="1" Color="#cccccc" Margin="0, 10, 0, 0" />

        <Label Text="■ Operation Status" FontAttributes="Bold" />
        <Label x:Name="ResultLabel" Text="{Binding OperationStatus}" TextColor="Gray" FontSize="14" />
        
        <Label Text="■ Paste Result" FontAttributes="Bold" Margin="0, 10, 0, 0" />
        <Label x:Name="PasteResultLabel" Text="{Binding PasteResult}" TextColor="#4CAF50" FontSize="14" />

    </VerticalStackLayout>
</ContentPage>
