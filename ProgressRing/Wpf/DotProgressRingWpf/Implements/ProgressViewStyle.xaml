<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Converters-->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!--Style for dot in progress ring-->
    <Style x:Key="DotStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="10"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="Opacity" Value="0.0" />
        <Setter Property="Fill" Value="DodgerBlue"/>
    </Style>

    <!--Progress message style-->
    <Style x:Key="ProgressMessageTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!--Progress percent style-->
    <Style x:Key="ProgressPercentTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!--Cancel button style-->
    <Style x:Key="CancelButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="25" />
        <Setter Property="IsCancel" Value="True" />
    </Style>
</ResourceDictionary>