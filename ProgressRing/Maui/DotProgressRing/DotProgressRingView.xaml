<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DotProgressRing.DotProgressRingView">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="DotStyle" TargetType="Ellipse">
                <Setter Property="WidthRequest" Value="8" />
                <Setter Property="HeightRequest" Value="8" />
                <Setter Property="Fill" Value="DodgerBlue" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="StrokeThickness" Value="0" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <AbsoluteLayout x:Name="CirclesAbsoluteLayout"
                    VerticalOptions="Center" HorizontalOptions="Center"
                    WidthRequest="120" HeightRequest="120">
        <!--Circles (Dots) are defined in code-behind-->
    </AbsoluteLayout>
</ContentView>
