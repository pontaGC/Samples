<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CopyPaste"
             x:Class="CopyPaste.MainPage">

    <ScrollView>
        <StackLayout Orientation="Horizontal">
            <Grid x:Name="MainLayout"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand">
                <local:PanContainer PanAreaWidth="{Binding Path=Width, Source={RelativeSource Self}}"
                                    PanAreaHeight="{Binding Path=Height, Source={RelativeSource Self}}">
                    <Ellipse x:Name="DraggableCircle"
                         WidthRequest="50"
                         HeightRequest="50"
                         Fill="Red"
                         Stroke="Black"
                         StrokeThickness="2"
                         HorizontalOptions="Start"
                         VerticalOptions="Start"
                         TranslationX="100"
                         TranslationY="150">
                </Ellipse>
                </local:PanContainer>
            </Grid>
        </StackLayout>
    </ScrollView>

</ContentPage>
