<Window x:Class="FileDragAndDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDragAndDrop"
        xmlns:behaviors="clr-namespace:FileDragAndDrop.Behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="900"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--Drag & Drop area-->
        <StackPanel Grid.Row="0" x:Name="DragDropArea" Margin="5">
            <i:Interaction.Behaviors>
                <behaviors:FileDragDropBehavior DropFilesAndFoldersCommand="{Binding DropFilesAndFoldersCommand}"
                                                DropFilesCommand="{Binding DropFilesCommand}"
                                                DropFoldersCommand="{Binding DropFoldersCommand}"
                                                DropFileAndFolders="{Binding DroppedFilesAndFolders, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
            <Label Content="Drag &amp; Drop area" />
            <Border BorderThickness="1"
                    BorderBrush="Black"
                    Width="700"
                    Height="50"
                    HorizontalAlignment="Stretch">
                <TextBlock VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="5">
            <Label Content="Dropped files and folders" />
            <Border BorderThickness="1"
                    BorderBrush="Blue"
                    Width="700" Height="200">
                <TextBlock Margin="10"
                           TextAlignment="Justify"
                           Text="{Binding FilesAndFolders}" />
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="5">
            <Label Content="Dropped files" />
            <Border BorderThickness="1"
                    BorderBrush="Blue"
                    Width="700" Height="100">
                <TextBlock Margin="10"
                           TextAlignment="Justify"
                           Text="{Binding Files, Mode=OneWay}" />
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="5">
            <Label Content="Dropped folders" />
            <Border BorderThickness="1"
                    BorderBrush="Blue"
                    Width="700" Height="100">
                <TextBlock Margin="10"
                           TextAlignment="Justify"
                           Text="{Binding Folders, Mode=OneWay}" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
